pipeline {
    agent none
    environment {
        RELEASE="20.04"
    }

    stages {
        stage("Build") {
            agent any
            environment {
                LOG_LEVEL="INFO"
            }
            steps {
                step {
                    echo "Building ${RELEASE} with log level ${LOG_LEVEL}"
                }
            }
        }
        stage("Test") {
            steps {
                step {
                    echo "Testing. Running tests for release ${RELEASE}"
                }
            }
        }
    }
}