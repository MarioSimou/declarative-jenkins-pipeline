pipeline {
    agent any
    environment {
        RELEASE="20.04"
    }
    stages {
        stage("Build"){
            environment {
                LOG_LEVEL="INFO"
            }
            parallel {
                stage("linux-amd64"){
                    steps {
                        echo "Building for $RELEASE on $STAGE_NAME"
                    }
                }
                stage("linux-arm64"){
                    steps {
                        echo "Building for $RELEASE on $STAGE_NAME"
                    }
                }
                stage("windows-amd64"){
                    steps {
                        echo "Building for $RELEASE on $STAGE_NAME"
                    }
                }
            }
        }
        stage("Test"){
            steps {
                echo "Running tests"
            }
        }
    }
}